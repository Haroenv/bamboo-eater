{
  "manifest_version": 3,
  "version": "1.0.0",
  "name": "__MSG_extension_name__",
  "description": "__MSG_extension_description__",
  "default_locale": "en",
  "icons": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png",
      "256": "icon-256.png",
      "512": "icon-512.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png",
      "48": "icon-48.png",
      "128": "icon-128.png",
      "256": "icon-256.png",
      "512": "icon-512.png"
    },
    "default_title": "__MSG_extension_name__"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://*.bamboohr.com/*"],
      "js": [
        "navigation.js",
        "calendar.js",
        "date-selection.js",
        "time-off.js",
        "content.js"
      ],
      "css": ["content.css"]
    }
  ],
  "permissions": ["activeTab", "storage"],
  "host_permissions": ["https://*.bamboohr.com/*"]
}
