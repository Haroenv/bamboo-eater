{
  "compilerOptions": {
    "target": "ES2024",
    "module": "ESNext",
    "lib": ["ES2024", "DOM"],
    "checkJs": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "types": ["chrome"]
  },
  "include": ["**/*.js", "types.d.ts"],
  "exclude": ["node_modules"],
  "typeAcquisition": {
    "enable": true,
    "include": ["chrome"]
  }
}
